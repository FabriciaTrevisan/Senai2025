package entities;

import entities.enums.Genero;

public class Livro {

    private String titulo;
    private Genero genero;
    private Autor autor; //composição 1:1

        public Livro(String titulo, Genero genero, Autor autor) {
        this.titulo = titulo;
        this.genero = genero;
        this.autor = autor;
    }

    public String getTitulo() {
        return titulo;
    }

    public Genero getGenero() {
        return genero;
    }

    public Autor getAutor() {
        return autor;
    }
---------------------------------------------
package entities;

import java.util.ArrayList;
import java.util.List;

public class Autor {


    private String nome;
    private List<Livro> livros; //lista de livros ou array de livros >> composição 1:muitos

    public Autor(String nome) {
        this.nome = nome;
        this.livros = new ArrayList<>();
    }

    public String getNome() {
        return nome;
    }

    public List<Livro> getLivros() {
        return livros;
    }

    public void adicionarLivro(Livro livro){
        this.livros.add(livro);
    }

    @Override
    public String toString() {
        StringBuilder sb = new StringBuilder(); //é uma lista para add o que quer printar
        sb.append("Autor: ");
        sb.append(this.nome);
        sb.append("\nLivros: \n");

        for (Livro livro : livros){
            //vou percorrer a classse Livros, cada item chama livro na lista livros
            sb.append(" - Título: ");
            sb.append(livro.getTitulo());
            sb.append(" | Gênero: ");
            sb.append(livro.getGenero());
            sb.append("\n");
        }
        return sb.toString();
    }

}
-----------------------------------------------
package entities;

public class Conta {

    private int numeroConta;
    private String titular;
    private double saldo;
    private String senha;
    //private static final double TAXA_SAQUE = 3.0 >> código do prof >> usa letra maíuscula para chamar atenção do desenvolvedor de que é um static final

    //contrutores
    public Conta(int numeroConta, String titular, String senha, double saldo){
        this.numeroConta=numeroConta;
        this.titular=titular;
        this.senha=senha;
        deposito(saldo);
    }
    //construtor
    public Conta(int numeroConta, String titular, String senha){
        this.numeroConta=numeroConta;
        this.titular=titular;
        this.senha=senha;
    }

    public int getNumeroConta() {
        return numeroConta;
    }
    public String getTitular() {
        return titular;
    }
    public double getSaldo() {
        return saldo;
    }

    public void setTitular(String titular) {
        this.titular = titular;
    }

    //metodo
    public void deposito(double valor) {
        if (valor > 0) {
            saldo += valor;
        } else{
            System.out.println("O valor deve ser maior que zero");
        }
    }

    public void saque(double valor){
        if (valor <= saldo - 3 && valor >= 0){
            saldo -= valor + 3;
        }else {
            System.out.println("valor de saque inválido");
        }

    }

    public boolean validarSenha (String senhaDigitada) {
        if (this.senha.equals(senhaDigitada)) {
            return true;
        } else {
            return false;
        }
    }

    @Override
    public String toString() {
        return "{ Conta "+ numeroConta + " | titular: " + titular + " | saldo: R$ " + saldo + "}";
    }
}
